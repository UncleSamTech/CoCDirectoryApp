<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:root="clr-namespace:CoCDirectoryApp"
    xmlns:views="clr-namespace:CoCDirectoryApp.Views"
    x:Class="CoCDirectoryApp.AppShell">

    <ShellContent
        Title="Main"
        Route="MainPage"
        ContentTemplate="{DataTemplate root:MainPage}" />

    <ShellContent
        Title="Splash"
        Route="SplashPage"
        ContentTemplate="{DataTemplate views:SplashPage}" />

    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

</Shell>
