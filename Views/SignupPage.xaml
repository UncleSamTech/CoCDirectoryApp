<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CoCDirectoryApp.Views.SignupPage"
    >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Fill">

            <!-- Logo and Title -->
            <Image Source="loggo.png" WidthRequest="80" HeightRequest="80" HorizontalOptions="Center" />
            <Label Text="Signup Page" FontAttributes="Bold" FontSize="28" HorizontalOptions="Center" />

            <!-- Username Entry -->
            <Entry x:Name="UsernameEntry" Placeholder="Choose your Username (Email or PhoneNumber)" />

            <!-- Password Entry -->
            <Entry x:Name="PasswordEntry"
                   Placeholder="Choose Password"
                   IsPassword="True"
                   TextChanged="OnPasswordTextChanged" />

            <!-- Password Validation Label -->
            <Label x:Name="PasswordValidationLabel"
                   TextColor="{DynamicResource Red}"
                   FontSize="12"
                   IsVisible="False" />

            <!-- Sign Up Button -->
            <Button Text="Sign Up" Clicked="OnSignUpClicked" />

            <!-- Or Login with -->
            <Label Text="or Sign up with" HorizontalOptions="Center" />

            <!-- Social Login Buttons -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <ImageButton Source="facebook.png"
                             WidthRequest="40" HeightRequest="40"
                             Clicked="OnFacebookSignUpClicked"
                             BackgroundColor="{DynamicResource Transparent}" />

                <ImageButton Source="google.png"
                             WidthRequest="40" HeightRequest="40"
                             Clicked="OnGoogleSignUpClicked"
                             BackgroundColor="{DynamicResource Transparent}" />

                <ImageButton Source="twitter.png"
                             WidthRequest="40" HeightRequest="40"
                             Clicked="OnTwitterSignUpClicked"
                             BackgroundColor="{DynamicResource Transparent}" />
            </HorizontalStackLayout>

            <!-- Login Navigation -->
            <Button Text="Login" Clicked="OnReturnLogin" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
