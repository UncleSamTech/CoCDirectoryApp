<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoCDirectoryApp.Views.AboutPage"
             Title="About"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- App Logo -->
        <Image Source="loggo.png"
               HeightRequest="120"
               WidthRequest="120"
               HorizontalOptions="Center" />

        <!-- App Description -->
        <Label Text="CocDirectory is a dedicated platform designed to help members of the Church of Christ in Nigeria easily find and connect with churches, access contact information, and stay informed. Our mission is to foster communication, connection, and community growth."
               FontSize="Medium"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               LineBreakMode="WordWrap"
               TextColor="{DynamicResource PrimaryTextColor}" />

        <!-- Terms & Conditions (Scrollable by itself) -->
        <Frame HasShadow="True"
               BorderColor="{DynamicResource Primary}"
               CornerRadius="10"
               Padding="0"
               HeightRequest="400">
            <WebView x:Name="TermsWebView" />
        </Frame>

    </VerticalStackLayout>

</ContentPage>
