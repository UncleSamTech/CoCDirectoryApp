<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CoCDirectoryApp.Views.LoginPage"
    >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Fill">

            <!-- Logo and Title -->
            <VerticalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,0,0,10">
                <Image Source="loggo.png" WidthRequest="80" HeightRequest="80" />
                <Label Text="Login Page" FontAttributes="Bold" FontSize="28" HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Username Entry -->
            <Entry x:Name="UsernameEntry" Placeholder="Username" />

            <!-- Password Entry -->
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <!-- Login Button -->
            <Button Text="Login" Clicked="OnLoginClicked" />

            <!-- OR login with -->
            <Label Text="or Login with" HorizontalOptions="Center" Margin="0,10,0,10" />

            <!-- Social Login Buttons -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <ImageButton Source="facebook.png"
                             WidthRequest="40" HeightRequest="40"
                             Clicked="OnFacebookLoginClicked"
                             BackgroundColor="{DynamicResource Transparent}" />

                <ImageButton Source="google.png"
                             WidthRequest="40" HeightRequest="40"
                             Clicked="OnGoogleLoginClicked"
                             BackgroundColor="{DynamicResource Transparent}" />

                <ImageButton Source="twitter.png"
                             WidthRequest="40" HeightRequest="40"
                             Clicked="OnTwitterLoginClicked"
                             BackgroundColor="{DynamicResource Transparent}" />
            </HorizontalStackLayout>

            <!-- Create Profile Button -->
            <Button Text="Create Profile" Margin="0,20,0,0" Clicked="OnSignUpClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
