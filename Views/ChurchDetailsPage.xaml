<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CoCDirectoryApp.Views"
    x:Class="CoCDirectoryApp.Views.ChurchDetailsPage"
    x:Name="ChurchDetailsPageRef"
    Title="Church Details"
    BackgroundColor="#f2f2f2">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0"
                             BindableLayout.ItemsSource="{Binding Churches}">

            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="1">

                        <!-- Church Image -->
                        <Image Source="{Binding BuildingImage}"
                               Aspect="AspectFill"
                               HeightRequest="250"
                               HorizontalOptions="Fill" />

                        <!-- Church Details Card -->
                        <VerticalStackLayout Spacing="12" Padding="20" BackgroundColor="White">

                            <!-- Church Name -->
                            <Label Text="{Binding Name}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryDarkText}" />

                            <!-- Church Address - Clickable -->
                            <!-- Clickable Address -->
                            <!-- Clickable Phone -->
                            <Button Text="{Binding Phone}"
                                    TextColor="{DynamicResource PrimaryDarkText}"
                                    BackgroundColor="Transparent"
                                    Padding="0"
                                    Clicked="OnDialPhoneClicked" />

                            <!-- Clickable Address -->
                            <Button Text="{Binding Address}"
                                    TextColor="{DynamicResource PrimaryDarkText}"
                                    BackgroundColor="Transparent"
                                    Padding="0"
                                    Clicked="OnOpenMapClicked" />


                            <!-- Activities Section -->
                            <Label Text="Activities:"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryDarkText}" />

                            <CollectionView ItemsSource="{Binding Activities}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding Name}"
                                               TextColor="{DynamicResource PrimaryDarkText}"
                                               FontSize="14">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:ChurchDetailsPage}}, Path=BindingContext.OpenActivityCommand}"
                                                    CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </BindableLayout.ItemTemplate>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
