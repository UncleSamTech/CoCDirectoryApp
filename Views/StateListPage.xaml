<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CoCDirectoryApp.Views.StateListPage"
    Title="Select a State"
    BackgroundColor="{DynamicResource White}">

    <Grid Padding="10" RowSpacing="10" RowDefinitions="Auto,*">
        <!-- Search bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search for a state"
                   TextChanged="OnSearchTextChanged"
                   BackgroundColor="{DynamicResource White}"
                   CancelButtonColor="{DynamicResource Gray100}" />

        <!-- CollectionView fills remaining space and scrolls -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding FilteredStates}"
                        SelectionMode="Single"
                        SelectionChanged="OnStateSelected">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray" StrokeThickness="1" Margin="5" BackgroundColor="White">
                        <Grid ColumnDefinitions="Auto,*,Auto"
                              Padding="10"
                              VerticalOptions="Center">

                            <!-- State Image -->
                            <Image Source="{Binding StateImage}"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Aspect="AspectFill"
                                   Grid.Column="0" />

                            <!-- State Name -->
                            <Label Text="{Binding StateName}"
                                   FontSize="18"
                                   VerticalOptions="Center"
                                   TextColor="{DynamicResource PrimaryDarkText}"
                                   Grid.Column="1"
                                   Margin="10,0" />

                            <!-- Arrow -->
                            <Image Source="fast_forward.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   Grid.Column="2"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
