<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoCDirectoryApp.Views.StateListPage"
             Title="StateListPage">

    <CollectionView ItemsSource="{Binding States}"
                 SelectionMode="Single"
                SelectionChanged="OnStateSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Stroke="Gray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Padding="10"
                    Margin="5"
                    StrokeShape="RoundRectangle 8">

                    <HorizontalStackLayout Spacing="10">
                        <Image Source="{Binding StateImage}" WidthRequest="60" HeightRequest="60" Aspect="AspectFill" />
                        <Label Text="{Binding StateName}" FontSize="20" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>