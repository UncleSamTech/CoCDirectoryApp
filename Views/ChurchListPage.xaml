<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoCDirectoryApp.Views.ChurchListPage"
             Title="ChurchListPage">
    <CollectionView ItemsSource="{Binding ChurchesList}"
             SelectionMode="Single"
             SelectionChanged="OnStateSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Stroke="Gray"
                StrokeThickness="1"
                BackgroundColor="White"
                Padding="10"
                Margin="5"
                StrokeShape="RoundRectangle 8">

                    <HorizontalStackLayout Spacing="10" Padding="5">
                        <!-- Church Logo -->
                        <Image Source="{Binding ChurchLoggo}"
           WidthRequest="40"
           HeightRequest="40"
           Aspect="AspectFill"
           VerticalOptions="Start" />

                        <!-- Church Name + Phone -->
                        <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                            <Label Text="{Binding ChurchName}"
               FontSize="20"
               FontAttributes="Bold" />

                            <Label Text="{Binding ChurchPhone}"
               FontSize="12"
               TextColor="Gray" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>


                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>